<Window x:Class="NBU_Mailer_2016.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBU_Mailer_2016"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="NBU-Mail Uploader (Plakhtiy A.Net Development © 2016)" Height="350" Width="525" Icon="Envelope.ico">
    <Grid>
        <TextBox x:Name="textBox_4_Tests_Only" Margin="10,10,10,40" TextWrapping="Wrap" Text="TODAY ENVELOPES:" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnShowSelectedDateEnv" Content="Show Envelopes For Date" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120, 0, 0, 10" Width="149" Height="25" RenderTransformOrigin="0.822,0.448" Click="btnShowSelectedDateEnv_Click"/>
        <DatePicker x:Name="dataPicker" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" SelectedDate="{x:Static sys:DateTime.Now}" Width="105"/>
        <Button x:Name="btnCheckDB" Content="Check If DB Exists" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="280,0,0,10" Width="115" Height="25" RenderTransformOrigin="0.822,0.448" Click="btnCheckDB_Click"/>
    </Grid>
</Window>
